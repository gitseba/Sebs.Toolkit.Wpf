<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime"
                    >
    
    <!--Font Family-->
    <FontFamily x:Key="FontAwesome">pack://application:,,,/Sebs.Toolkit.Wpf.Resources;component/Resources/Fonts/#FontAwesome</FontFamily>
    <FontFamily x:Key="LatoThin">pack://application:,,,/Sebs.Toolkit.Wpf.Resources;component/Resources/Fonts/#Lato Thin</FontFamily>
    <FontFamily x:Key="LatoRegular">pack://application:,,,/Sebs.Toolkit.Wpf.Resources;component/Resources/Fonts/#Lato Regular</FontFamily>
    <FontFamily x:Key="LatoItalic">pack://application:,,,/Sebs.Toolkit.Wpf.Resources;component/Resources/Fonts/#Lato Italic</FontFamily>
    <FontFamily x:Key="LatoBold">pack://application:,,,/Sebs.Toolkit.Wpf.Resources;component/Resources/Fonts/#Lato Bold</FontFamily>

    <!--Font Size-->
    <system:Double x:Key="VerySmall_8">8</system:Double>
    <system:Double x:Key="Small_12">12</system:Double>
    <system:Double x:Key="Normal_16">16</system:Double>
    <system:Double x:Key="Large_20">20</system:Double>
    <system:Double x:Key="VeryLarge_24">24</system:Double>
    <system:Double x:Key="ExtraLarge_32">32</system:Double>

</ResourceDictionary>